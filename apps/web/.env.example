# NexFlow Web App Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Core Configuration
# =============================================================================

# Node environment (production | development)
NODE_ENV=production

# Feature flags
NEXT_PUBLIC_DEMO_MODE=false
NEXT_PUBLIC_USE_NEW_UI=true

# =============================================================================
# Database (Supabase PostgreSQL)
# =============================================================================

# Pooled connection for application queries
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection for migrations
DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres"

# Supabase project URLs and keys
NEXT_PUBLIC_SUPABASE_URL="https://[project-ref].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="eyJ..."
SUPABASE_SERVICE_ROLE_KEY="eyJ..."

# =============================================================================
# Authentication (NextAuth.js)
# =============================================================================

# Production URL (no trailing slash)
NEXTAUTH_URL="https://your-app.com"

# Secret for JWT signing (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-secret-here"

# =============================================================================
# OAuth Providers
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# GitHub OAuth
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# =============================================================================
# Integrations
# =============================================================================

# Linear
LINEAR_CLIENT_ID=""
LINEAR_CLIENT_SECRET=""
LINEAR_WEBHOOK_SECRET=""

# Slack
SLACK_CLIENT_ID=""
SLACK_CLIENT_SECRET=""
SLACK_SIGNING_SECRET=""
SLACK_BOT_TOKEN=""

# Discord
DISCORD_CLIENT_ID=""
DISCORD_CLIENT_SECRET=""
DISCORD_BOT_TOKEN=""

# Jira (optional)
JIRA_CLIENT_ID=""
JIRA_CLIENT_SECRET=""

# Notion (optional)
NOTION_CLIENT_ID=""
NOTION_CLIENT_SECRET=""

# =============================================================================
# AI Services
# =============================================================================

# Anthropic (Claude)
ANTHROPIC_API_KEY=""

# OpenAI (optional, for embeddings/fallback)
OPENAI_API_KEY=""

# =============================================================================
# Background Jobs & Caching
# =============================================================================

# Redis (Upstash recommended for serverless)
REDIS_URL="rediss://default:[password]@[host].upstash.io:6379"

# =============================================================================
# Security
# =============================================================================

# Token encryption for OAuth tokens (generate with: openssl rand -base64 32)
TOKEN_ENCRYPTION_KEY=""

# =============================================================================
# Optional Services
# =============================================================================

# Pusher (for real-time updates)
PUSHER_APP_ID=""
PUSHER_KEY=""
PUSHER_SECRET=""
PUSHER_CLUSTER=""
NEXT_PUBLIC_PUSHER_KEY=""
NEXT_PUBLIC_PUSHER_CLUSTER=""

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_FROM_NUMBER=""
